.container
  .row
    .col-md-5
      %h1
        Upcoming Sponsorships

        %table.table.table-striped
          - @upcoming_sponsorships.each do |sponsorship|
            %tr
              %td.col-md-4{style: "padding:20px 8px 20px 8px;"}
                = link_to sponsorship.conference.title, portal_sponsor_conference_path(@sponsor.short_name, sponsorship.conference.short_title)
                %br
                %small.text-muted
                  Sponsorship Level:
                  = sponsorship.title

              %td.col-md-2{style: "padding:20px 8px 20px 8px;"}
                = link_to 'Claim your benefits', 'javascript: void(0)', "type"=>"button", "data-trigger"=>"focus", "data-toggle"=>"popover", "title"=>"Your benefits", "data-content"=>"#{render partial: 'tooltip', locals: { sponsorship: sponsorship} }"

                - progress_percentage = sponsorship.calculate_progress
                .progress
                  %div{class: "progress-bar #{event_progress_color(progress_percentage)}", style: "width:#{progress_percentage}%;"}
                    = sponsorship.progress_status.reject{ |_key, value| value || value.nil? }.length
                    left
    .col-md-6
      %h1
        Upcoming Events & Tasks
      .row
        = render partial: 'events'
