- progress_status = sponsorship.progress_status
%ul.list-unstyled
  %li{'class'=>class_for_todo(progress_status['company_description'])}
    %span{'class'=>icon_for_todo(progress_status['company_description'])}
      = link_to 'Fill out your company description', edit_portal_sponsor_path(sponsorship.sponsor.short_name)
  %li{'class'=>class_for_todo(progress_status['company_link'])}
    %span{'class'=>icon_for_todo(progress_status['company_link'])}
      = link_to 'Add a company URL', edit_portal_sponsor_path(sponsorship.sponsor.short_name)
  %li{'class'=>class_for_todo(progress_status['logo'])}
    %span{'class'=>icon_for_todo(progress_status['logo'])}
      = link_to 'Upload a logo', edit_portal_sponsor_path(sponsorship.sponsor.short_name)
